{
  "header": {
    "type": "header",
    "text": "Create A Course"
  },

  "title": {
    "type": "text",
    "label": "Title",
    "required": true
  },

  "instructor_name": {
    "type": "text",
    "label": "Instructor Name",
    "required": true
  },

  "start": {
    "type": "container",

    "contents": {
      "date": {
        "label": "Start Date",
        "width": "75%",
        "type": "date",
        "required": true
      },

      "time": {
        "width": "25%",
        "type": "time",
        "required": true
      }
    }
  },

  "end": {
    "type": "container",

    "contents": {
      "date": {
        "label": "End Date",
        "width": "75%",
        "type": "date",
        "required": true
      },

      "time": {
        "width": "25%",
        "type": "time",
        "required": true
      }
    }
  },

  "site_id": {
    "type": "select",
    "label": "Site",
    "required": true,
    "default": "Please select a site",
    "items": "http://localhost:5000/sites"
  },

  "location": {
    "type": "text",
    "label": "Location",
    "required": true
  },

  "attendees_max": {
    "type": "number",
    "label": "Maximum Atendees",
    "required": true,
    "min": 0
  },

  "description": {
    "type": "rich_text",
    "label": "Description",
    "required": true
  },

  "FormButtons": {
    "type": "container",
    "center": true,

    "contents": {
      "SubmitButton": {
        "type": "button",
        "text": "Add",
        "submit": true
      },

      "ResetButton": {
        "type": "button",
        "text": "Reset",
        "reset": true
      }
    }
  }
}
